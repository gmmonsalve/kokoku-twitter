<section class="register-section">
  <h1 class="logreg-h1">Welcome to Twitter</h1>
  <p class="logreg-p">To register please fill in the form below</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="inputGroup">
      <div class="inputLabel">
        <%= f.label :username, 'Username', :class => 'registration-text-input' %>
        <%= f.text_field :username %>
      </div>
    </div>
    <div class="inputGroup">
      <div class="inputLabel">
        <%= f.label :email, 'E-mail', :class => 'registration-text-input' %><br />
        <%= f.text_field :email%>
      </div>
    </div>
    <div class="inputGroup">
      <div class="inputLabel">
        <%= f.label :password, 'Password', :class => 'registration-password' %>
        <%= f.password_field (:password), :required => true %>
      </div>
    </div>
    <div class="inputGroup">
      <div class="inputLabel">
        <%= f.label :confirm, 'Confirm your password', :class => 'registration-password' %>
        <%= f.password_field (:confirm), :required => true %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Register" %>
    </div>
  <% end %>
</section>
